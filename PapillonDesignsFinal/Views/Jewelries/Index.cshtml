@model IEnumerable<PapillonDesignsFinal.Models.Jewelry>

@{
    ViewBag.Title = "Index";
}
<div class="homeheader">
    <h2>Available Jewelry Listing</h2>
</div>
<center>
    <div class="jumbotron">
        <h1>Papillon Designs</h1>
        <h2 class="homeheader">Unique jewelry for every occasion</h2>
    </div>
</center>
@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<p>
    
        <ul class="mini-nav">
            <li>@Html.ActionLink("Earrings", "", "")</li>
            <li>@Html.ActionLink("Bracelets", "", "")</li>
            <li>@Html.ActionLink("Necklaces", "", "")</li>
            <li>@Html.ActionLink("Sets", "", "")</li>

            @* name you want to display, name of view, name of view folder/controller  *@
        </ul>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>

        
    </tr>

@foreach (var item in Model)
{
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.ImageURL)*@
            <img src="~/Content/Images/@item.ImageURL" alt="jewelry image" height="150" width="155" />
            
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
        @if (User.IsInRole("Admin"))
        {
            @*Trying to make it so only admin can view then put closing brackets after lines below*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.JewelryId }) |
            @Html.ActionLink("Details", "Details", new { id = item.JewelryId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.JewelryId })
        </td>
         }
    </tr>
}

</table>
