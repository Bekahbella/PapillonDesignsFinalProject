@model IEnumerable<PapillonDesignsFinal.Models.Jewelry>

@{
    ViewBag.Title = "Index";
}

<center>
    <div class="jumbotron">
        <h1>Papillon Designs</h1>
        <h2 class="homeheader">Unique jewelry for every occasion</h2>
    </div>
</center>


@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}


<p>
    <div class="row">
        <ul class= "col-sm-12 mini-nav">
            <li class="col-sm-3">@Html.ActionLink("Earrings", "Earrings", "Jewelries")</li>
            <li class="col-sm-3">@Html.ActionLink("Bracelets", "Bracelets", "Jewelries")</li>
            <li class="col-sm-3">@Html.ActionLink("Necklaces", "Necklaces", "Jewelries")</li>
            <li class="col-sm-3">@Html.ActionLink("Sets", "Sets", "Jewelries")</li>

            @* name you want to display, name of view, name of view folder/controller  *@
        </ul>
    </div>
    </p>
<center>
    <p class="jewelryheader">All Jewelry </p>
</center>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>

        
    </tr>

@foreach (var item in Model)
{
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.ImageURL)*@
            <img src="~/Content/Images/@item.ImageURL" alt="jewelry image" height="150" width="155" />
            
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
        @if (User.IsInRole("Admin"))
        {
            @*Trying to make it so only admin can view then put closing brackets after lines below*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.JewelryId }) |    
            @Html.ActionLink("Delete", "Delete", new { id = item.JewelryId })
            @Html.ActionLink("Details", "Details", new { id = item.JewelryId }) |

        </td>
        }
    </tr>

}

</table>
