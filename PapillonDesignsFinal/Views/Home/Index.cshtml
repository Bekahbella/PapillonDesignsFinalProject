@{
    ViewBag.Title = "Home Page";
}
<center>
    <div class="jumbotron">
        <h1>Papillon Designs</h1>
        <h2 class="homeheader">Unique jewelry for every occasion</h2>
    </div>
</center>

<center>
    <h2> Welcome to Papillon Designs</h2>
    <h3>
        Here at Papillon Designs we believe that jewelry should be unique, beautiful and most importantly affordable.
        We do not mass produce, so each piece you buy will be your own unique treasure. Feel free to browse our
        catalog of one of a kind jewelry, or we would be happy to work on making a custom piece to meet your
        individual style and specifications.


    </h3>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- buttons indicating photos, animated to slide from photo to photo. data-ride--start animation
             immediately-->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>
            <li data-target="#myCarousel" data-slide-to="6"></li>
        </ol>

        <!-- Wrapper for images -->
        <div class="carousel-inner" role="listbox" style="width: 400px; height: 500px;">
            <div class="item active">
                <img src="~/Content/Images/HomePgPDImg.jpg" alt="Earring Images">
            </div>

            <div class="item">
                <img src="~/Content/Images/BlueNecklace.jpg" alt="Blue Necklace">
            </div>

            <div class="item">
                <img src="~/Content/Images/PurpleMarmalade.jpg" alt="Purple Necklace">
            </div>

            <div class="item">
                <img src="~/Content/Images/TwirlyNecklace.jpg" alt="Twirly Necklace">
            </div>

            <div class="item">
                <img src="~/Content/Images/FreshwaterPearl.jpg" alt="Freshwater Pearl Necklace">
            </div>

            <div class="item">
                <img src="~/Content/Images/BlueFlower.jpg" alt="Blue Flower Earrings">
            </div>

            <div class="item">
                <img src="~/Content/Images/PineCone.jpg" alt="Pine Cone Earrings">
            </div>

            <div class="item">
                <img src="~/Content/Images/BrownBold.jpg" alt="Bronze Bold Necklace">
            </div>
        </div>

        <!-- prev and next buttons on sides using the chevron shaped glyph -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</center>

